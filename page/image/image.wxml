  注意：
      1。image 组件可以写成单标签，出可以写成双标签
      2。image 组件默认有自己的大小：320x240
      3。image 组件是一个行内块元素(inline-block)
 -->
 <!-- <image />
 <text>哈哈哈</text> -->

 <!-- src 本地路径(相对路径/绝对路径) / 远程地址-->
 <image src="../../assets/text/cat.jpg" />
 <image src="/assets/text/cat.jpg" />
 <image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" />

 <!-- 补充： 用户在系统中选图片或拍照-->
 <button bindtap="handleChooseAlbum">选中图片</button>
 <image src="{{ images }}" />


 <!-- 3.bindload: 监听图片加载完成 -->
 <view>--------------------------------</view>
 <image wx:for = "{{ 1 }}"
    src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"
    bindload="handleImageLoad"
    lazy-load
  />

<!-- 4. show-menu-by-longpress: 长按图片出现识别小程序码 -->
<image  show-menu-by-longpress
        src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" />
